# 代理组配置（关键修正：统一使用纯文本名称，避免符号导致的匹配问题）
proxy-groups:
  # 主要代理组
  - name: "TUIC代理"
    type: select
    proxies:
      - "TUIC-bitterzhou"
      - "BITTER-SERVER-1-Shadowsocks-2022"
      - "BITTER-SERVER-1-hy2"
      - "BITTER-SERVER-1-tuic"
      - DIRECT
  
  # 修正：使用纯文本名称"广告拦截"，和规则中引用的名称完全一致
  - name: "广告拦截"
    type: select
    proxies:
      - REJECT
      - DIRECT
  
  - name: "国内直连"
    type: select
    proxies:
      - DIRECT
  
  - name: "AI服务"
    type: select
    proxies:
      - "TUIC代理"
      - DIRECT
  
  - name: "国外媒体"
    type: select
    proxies:
      - "TUIC代理"
      - DIRECT
  
  - name: "国外网站"
    type: select
    proxies:
      - "TUIC代理"
      - DIRECT

