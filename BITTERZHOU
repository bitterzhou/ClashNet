# Clash 配置文件 - TUIC节点专用
mixed-port: 7890
socks-port: 7891
redir-port: 7892
allow-lan: true
mode: rule
log-level: info
external-controller: 0.0.0.0:9090
secret: ""
ipv6: false

# 启用TUN模式（可选，提升性能）
tun:
  enable: false  # 如果开启，需要管理员权限
  stack: system
  dns-hijack:
    - tcp://any:53
    - udp://any:53
  auto-route: true
  auto-detect-interface: true

# DNS设置
dns:
  enable: true
  listen: 0.0.0.0:53
  enhanced-mode: fake-ip
  fake-ip-range: 198.18.0.1/16
  nameserver:
    - 223.5.5.5  # 阿里DNS
    - 119.29.29.29  # 腾讯DNS
    - 114.114.114.114  # 114DNS
  fallback:
    - tls://1.1.1.1
    - tls://8.8.8.8
    - https://dns.google/dns-query
  fallback-filter:
    geoip: true
    geoip-code: CN
    ipcidr:
      - 240.0.0.0/4
      - 0.0.0.0/32

